<%= render 'layouts/student_nav'%>
<%=provide(:name,'修改信息')%>
<div class='row'>
  <div class='col-lg-4'>
    <div class='panel panel-primary'>
      <div class='panel-heading'>
        头像
      </div>
      <div class='panel-body'  align="center">
        <%= image_tag(@head,alt:'head',class:'thumbnail') %>
        
      </div>
      <div class='panel-foot'>
        <%= form_tag({:method =>"post",:controller =>"students",action: "update_head"},:multipart =>true)do %>
          
          <div class='a-upload  btn btn-primary'><%= file_field 'file','head'%>上传</div>
          <input type='submit' class='btn btn-primary'>
        <%end%>
      </div>
    </div>
  
          

    <div class='panel panel-primary'>
      <div class='panel-heading'>
       身份证
      </div>
       <div class='panel-body' align="center">
        <%= image_tag(@id_card,alt:'id_card',class:'thumbnail') %>
        
      </div>
      <div class='panel-foot'>
        <%= form_tag({:method =>"post",:controller =>"students",action:"update_idcard"},:multipart =>true)do %>
          
          <div class='a-upload btn btn-primary'><%= file_field "file","id_card"%>上传</div>
          <input type='submit' class='btn btn-primary'>
        <%end%>
        </div>
    </div>
  </div>
  <div class='col-lg-8'>
    <div class='panel panel-primary'>
      <div class='panel-heading'>
        基本信息
      </div>
     
      <div class='panel-body'>
         <%= form_for(@user, url: {controller: 'students', action:'update'},html: {class: "form-horizontal"}) do |f|%>
          <div class='form-group'>
              <%= f.label :name, "姓名", class: 'control-label col-lg-4' %>
              <div class='col-lg-6'>
                <%= f.text_field :name, class:"form-control"%>
              </div>
  
          </div>
          <div class='form-group'>
              <%= f.label :sex, "性别", class: 'control-label col-lg-4' %>
              <div class='col-lg-6'>
                <label class='radio-inline'><%= f.radio_button :sex , 0%>男</label>
      
      <label class='radio-inline'><%= f.radio_button :sex ,1 %>女</label>
              </div>
  
          </div>
          <div class='form-group'>
              <%= f.label :phone, "手机号", class: 'control-label col-lg-4' %>
              <div class='col-lg-6'>
                <%= f.text_field :phone, class:"form-control"%>
              </div>
  
          </div>
          
          <div class='col-lg-4 col-lg-offset-5'>
  <%= f.submit "提交", class: "btn btn-primary" %>
</div>
          <%end%>
        
        
        
        
        
      </div>
    </div>
  </div>
</div>