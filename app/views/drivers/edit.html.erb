<%= render 'layouts/driver_nav'%>
<%=provide(:name,'Infomation')%>
<div class='row'>
  <div class='col-lg-4'>
    <div class='panel panel-primary'>
      <div class='panel-heading'>
        Head
      </div>
      <div class='panel-body'  align="center">
        <%= image_tag(@head,alt:'head',class:'thumbnail') %>
        
      </div>
      <div class='panel-foot'>
        <%= form_tag({:method =>"post",:controller =>"drivers",action: "update_head"},:multipart =>true)do %>
          
          <div class='a-upload  btn btn-primary'><%= file_field 'file','head'%>Upload</div>
          <input type='submit' class='btn btn-primary'>
        <%end%>
      </div>
    </div>
  
          

    <div class='panel panel-primary'>
      <div class='panel-heading'>
        ID Card
      </div>
       <div class='panel-body' align="center">
        <%= image_tag(@id_card,alt:'id_card',class:'thumbnail') %>
        
      </div>
      <div class='panel-foot'>
        <%= form_tag({:method =>"post",:controller =>"drivers",action:"update_idcard"},:multipart =>true)do %>
          
          <div class='a-upload btn btn-primary'><%= file_field "file","id_card"%>Upload</div>
          <input type='submit' class='btn btn-primary'>
        <%end%>
        </div>
    </div>
    
    <div class='panel panel-primary'>
      <div class='panel-heading'>
        License
      </div>
       <div class='panel-body' align="center">
        <%= image_tag(@license,alt:'license',class:'thumbnail') %>
        
      </div>
      <div class='panel-foot'>
        <%= form_tag({:method =>"post",:controller =>"drivers",action:"update_carlicense"},:multipart =>true)do %>
          
          <div class='a-upload btn btn-primary'><%= file_field "file","license"%>Upload</div>
          <input type='submit' class='btn btn-primary'>
        <%end%>
        </div>
    </div>
    
  </div>
  <div class='col-lg-8'>
    <div class='panel panel-primary'>
      <div class='panel-heading'>
        Base Information
      </div>
     
      <div class='panel-body'>
         <%= form_for(@user, url: {controller: 'drivers', action:'update'},html: {class: "form-horizontal"}) do |f|%>
          <div class='form-group'>
              <%= f.label :name, "Name", class: 'control-label col-lg-4' %>
              <div class='col-lg-6'>
                <%= f.text_field :name, class:"form-control"%>
              </div>
  
          </div>
          <div class='form-group'>
              <%= f.label :sex, "Sex", class: 'control-label col-lg-4' %>
              <div class='col-lg-6'>
                <label class='radio-inline'><%= f.radio_button :sex , 0%>Male</label>
      
      <label class='radio-inline'><%= f.radio_button :sex ,1 %>Female</label>
              </div>
  
          </div>
          <div class='form-group'>
              <%= f.label :phone, "Phone", class: 'control-label col-lg-4' %>
              <div class='col-lg-6'>
                <%= f.text_field :phone, class:"form-control"%>
              </div>
  
          </div>
          
          <div class='col-lg-4 col-lg-offset-5'>
  <%= f.submit "Submit", class: "btn btn-primary" %>
</div>
          <%end%>
        
        
        
        
        
      </div>
    </div>
  </div>
</div>