<%= render 'layouts/driver_nav'%>
<%=provide(:name,'学生信息')%>

<div class='row'>
  <div class='col-lg-4'>
    <div class='panel panel-primary'>
      <div class='panel-heading'>
        头像
      </div>
      <div class='panel-body'  align="center">
        <%= image_tag(@user.head,alt:'head',class:'thumbnail') %>
        
      </div>
      
    </div>
  
  </div>
  <div class='col-lg-8'>
    <div class='panel panel-primary'>
      <div class='panel-heading'>
        基本信息
      </div>
     
      <div class='panel-body'>
        <ul class='list-group'>
          
          <li class='list-group-item'>
          
            
            <div class='row'>
              <div class='col-lg-2'>姓名</div>
              <div class='col-lg-10'><%= @user.name %></div>
            </div>
          </li>
           <li class='list-group-item'>
            <div class='row'>
              <div class='col-lg-2'>性别</div>
              <div class='col-lg-10'><%= sex_present @user.sex  %></div>
            </div>
          </li>

          <li class='list-group-item'>
            <div class='row'>
              <div class='col-lg-2'>手机号</div>
              <div class='col-lg-10'><%=  @user.phone  %></div>
            </div>
          </li>
          
         
        </ul>
      </div>
    </div>

  </div>
</div>